#!/bin/bash

# 获取当前日期并格式化
currentDate=$(date +"%Y-%m-%d %H:%M")

# 检查文件是否在暂存区内
if git diff --cached --name-only | grep -q "src/content/blog/test.md"; then
    # 更新 updatedAt 字段
    sed -i '' "s/updatedAt: .*/updatedAt: $currentDate/" src/content/blog/test.md

    # 将更新后的文件添加到暂存区
    git add src/content/blog/test.md
fi