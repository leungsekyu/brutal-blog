---
interface Props {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
}

const { headings } = Astro.props;
---

<aside>
  <nav class="sticky top-6 hidden lg:block">
    <ul>
      {
        headings.map((heading) => (
          <li class="py-1">
            {[...Array(heading.depth - 1)].map(() => (
              <span class="inline-block w-4" />
            ))}

            <a class="text-dark poppins hover:text-stone transition-all duration-150 ease-in-out" href={`#${heading.slug}`}>
              {heading.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</aside>
