---
import { join } from 'node:path'
import { AstroFont } from 'astro-font'

const appDir = process.cwd()
const getFontPath = (fontName: string) => join(appDir, 'public', 'fonts', fontName)
---

<!-- https://www.npmjs.com/package/astro-font -->
<AstroFont
  config={[
    {
      name: 'Outfit',
      src: [
        {
          style: 'normal',
          path: getFontPath('outfit.ttf'),
        },
      ],
      preload: true,
      display: 'swap',
      selector: '.outfit',
      fallback: 'sans-serif',
    },
    {
      name: 'Poppins',
      src: [
        {
          style: 'normal',
          path: getFontPath('poppins.ttf'),
        },
      ],
      preload: false,
      display: 'swap',
      selector: '.poppins',
      fallback: 'sans-serif',
    },
    {
      name: 'Righteous',
      src: [
        {
          style: 'normal',
          path: getFontPath('righteous.ttf'),
        },
      ],
      preload: true,
      display: 'swap',
      selector: '.righteous',
      fallback: 'sans-serif',
    },
    {
      name: 'Sanchez',
      src: [
        {
          style: 'normal',
          path: getFontPath('sanchez.ttf'),
        },
      ],
      preload: false,
      display: 'swap',
      selector: '.sanchez',
      fallback: 'serif',
    },
    {
      name: 'DM Serif Text',
      src: [
        {
          style: 'normal',
          path: getFontPath('dm-serif.ttf'),
        },
      ],
      preload: false,
      display: 'swap',
      selector: '.dm-serif',
      fallback: 'serif',
    },
  ]}
/>
