---
import { Card } from '@eliancodes/brutal-ui';
import { Pill } from '@eliancodes/brutal-ui';

const techStack = [
  { name: 'Astro', url: 'https://astro.build/' },
  {
    name: 'Astro | 内容集合',
    url: 'https://docs.astro.build/zh-cn/guides/content-collections/',
  },
  { name: 'Astro | RSS', url: 'https://docs.astro.build/zh-cn/recipes/rss/' },
  {
    name: 'Astro | Sitemap',
    url: 'https://docs.astro.build/zh-cn/guides/integrations-guide/sitemap/',
  },
  { name: 'UnoCSS', url: 'https://unocss.dev/' },
  { name: 'TypeScript', url: 'https://www.typescriptlang.org/' },
  { name: 'Netlify', url: 'https://www.netlify.com/' },
];
---

<h2 class="hidden">技术栈</h2>
<div class="col-span-2">
  <Card>
    <h2 class="mb-8 dm-serif font-bold text-2xl md:text-4xl lg:text-6xl">搭建本博客用到的工具 🧰（学习中）</h2>
    <ul class="flex flex-wrap gap-4">
      {
        techStack.map((tech) => (
          <li>
            <Pill>
              <a class="sanchez" href={tech.url} target="_blank" title={`转到 ${tech.name}`}>
                {tech.name}
              </a>
            </Pill>
          </li>
        ))
      }
    </ul>
  </Card>
</div>
