---
import { mobileSocials } from '@data/socials'
---

<section class="pb-3 md:hidden">
  <h2 class="hidden">我的个人社交媒体</h2>
  <ul class="flex justify-between">
    {
      mobileSocials.map((social) => (
        <li class="card-shadow text-green rounded border-2 border-black bg-white px-4 py-2">
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            title={`我的${social.name}`}
            aria-label={`访问我的${social.name}`}
          >
            <div
              class:list={[social.icon, 'p-6', social.name === '小红书' ? 'scale-125' : '']}
              role="img"
              aria-label={social.name}
            />
          </a>
        </li>
      ))
    }
  </ul>
</section>
